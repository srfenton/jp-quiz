<style>
    /* General Body Styling */
    body {
        font-family: "Playfair Display", serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #f9f7f2;
        color: #1a1a1a;
        text-align: center;
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensure the body spans the full viewport height */
    }

    /* Content Wrapper */
    main {
        flex: 1; /* Allows the main content to push the footer down if needed */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Headings */
    h1, p.question {
        font-size: 2.5rem;
        font-family: "Arial", sans-serif;
        font-weight: 600;
        margin: 20px 0;
        color: #333;
    }

    /* Lists */
    ul {
        list-style-type: none;
        padding: 0;
        margin: 20px 0;
    }

    li {
        margin: 10px 0;
    }

    /* Buttons */
    button {
        background-color: transparent;
        border: 2px solid #b2985b;
        color: #1a1a1a;
        padding: 10px 20px;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 4px;
        transition: all 0.3s ease-in-out;
        font-family: "Playfair Display", serif;
    }

    button:hover {
        background-color: #b2985b;
        color: #fff;
    }

    /* Answer Choices */
    .answer-choices {
        font-size: 1.5rem;
        padding: 10px 20px;
        margin: 5px;
        border: none;
        background-color: #f0f0f0;
        color: #000;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .answer-choices:hover {
        background-color: #e0e0e0;
    }

    /* Footer Buttons */
    .footer-links-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 20px 0;
    }

    .footer-button {
        background: transparent;
        border: none;
        color: #0073e6;
        font-size: 1.2rem;
        cursor: pointer;
        text-decoration: none;
        padding: 10px;
        transition: color 0.3s;
    }

    .footer-button:hover {
        color: #005bb5;
        text-decoration: underline;
    }

    /* Links */
    a {
        text-decoration: none;
        color: #1a1a1a;
        font-weight: 500;
        margin-top: 20px;
        display: inline-block;
    }

    a:hover {
        color: #b2985b;
    }
</style>

<body>
    <main>
        <p class="question"><%= word %></p>
        <ul>
            <% for (let key in jsonData) { %>
                <li>
                    <form action="/submit?answer=<%= jsonData[key] %>" method="POST">
                        <button type="submit" class="answer-choices"><%= jsonData[key] %></button>
                    </form>
                </li>
            <% } %>
        </ul>
        <p><%= questionNumber %> / <%= numberOfQuestions %></p>
    </main>

    <div class="footer-links-container">
        <form action="/selectlesson" method="get" style="display: inline;">
            <input name="selected_lesson" type="hidden"/>
            <button type="submit" class="footer-button">Lessons</button>
        </form>
        <form action="/reset" method="post" style="display: inline;">
            <input name="selected_lesson" type="hidden"/>
            <button type="submit" class="footer-button">Reset & Go Home</button>
        </form>
    </div>
</body>
